{
  "name": "rumdl",
  "displayName": "rumdl - Markdown Linter",
  "description": "Fast Rust-based Markdown linter with real-time diagnostics and auto-fixes",
  "version": "0.0.180",
  "publisher": "rvben",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rvben/rumdl-vscode.git"
  },
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#FF7733",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.82.0"
  },
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": "limited",
      "description": "rumdl only lints files when the workspace is trusted. In untrusted workspaces, diagnostics are disabled.",
      "restrictedConfigurations": [
        "rumdl.server.path",
        "rumdl.configPath"
      ]
    }
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "keywords": [
    "markdown",
    "linter",
    "rust",
    "fast",
    "markdownlint",
    "auto-fix",
    "real-time",
    "diagnostics"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "markdown",
        "extensions": [
          ".md",
          ".markdown",
          ".mdown",
          ".mkd",
          ".mdx"
        ]
      }
    ],
    "commands": [
      {
        "command": "rumdl.fixAll",
        "title": "Fix all auto-fixable problems",
        "category": "rumdl"
      },
      {
        "command": "rumdl.fixAllWorkspace",
        "title": "Fix all auto-fixable problems in workspace",
        "category": "rumdl",
        "icon": "$(tools)"
      },
      {
        "command": "rumdl.restartServer",
        "title": "Restart Server",
        "category": "rumdl"
      },
      {
        "command": "rumdl.showClientLogs",
        "title": "Show client logs",
        "category": "rumdl"
      },
      {
        "command": "rumdl.showServerLogs",
        "title": "Show server logs",
        "category": "rumdl"
      },
      {
        "command": "rumdl.printDebugInfo",
        "title": "Print debug information",
        "category": "rumdl"
      },
      {
        "command": "rumdl.checkDuplicateDiagnostics",
        "title": "Check for duplicate diagnostics",
        "category": "rumdl"
      },
      {
        "command": "rumdl.checkStatus",
        "title": "Check Extension Status",
        "category": "rumdl"
      },
      {
        "command": "rumdl.openConfigFile",
        "title": "Open Configuration File",
        "category": "rumdl",
        "icon": "$(file)"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "rumdl",
      "properties": {
        "rumdl.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable rumdl linting"
        },
        "rumdl.fixOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically fix all auto-fixable problems when saving a file. For more control, use editor.codeActionsOnSave with source.fixAll.rumdl instead."
        },
        "rumdl.configPath": {
          "type": "string",
          "description": "Path to rumdl configuration file"
        },
        "rumdl.rules.enable": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Rules to enable (if specified, only these rules will be active)"
        },
        "rumdl.rules.disable": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Rules to disable"
        },
        "rumdl.server.path": {
          "type": "string",
          "description": "Path to rumdl executable. Leave empty for auto-detection (checks workspace .venv, then system PATH, then bundled binary). Set to an absolute path for custom installations."
        },
        "rumdl.server.logLevel": {
          "type": "string",
          "enum": [
            "error",
            "warn",
            "info",
            "debug",
            "trace"
          ],
          "default": "info",
          "description": "Log level for rumdl server"
        },
        "rumdl.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Trace LSP messages"
        },
        "rumdl.diagnostics.deduplicate": {
          "type": "boolean",
          "default": true,
          "description": "Remove duplicate diagnostics (useful if multiple markdown linters are active)"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "when": "resourceExtname == .md && rumdl.enabled",
          "command": "rumdl.fixAll",
          "group": "1_modification@1"
        }
      ],
      "commandPalette": [
        {
          "command": "rumdl.fixAll",
          "when": "resourceExtname == .md"
        },
        {
          "command": "rumdl.fixAllWorkspace"
        }
      ]
    },
    "keybindings": [
      {
        "command": "rumdl.fixAll",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorTextFocus && editorLangId == markdown"
      },
      {
        "command": "rumdl.fixAllWorkspace",
        "key": "ctrl+shift+alt+r",
        "mac": "cmd+shift+alt+r"
      },
      {
        "command": "rumdl.openConfigFile",
        "key": "ctrl+shift+.",
        "mac": "cmd+shift+."
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "compile:dev": "webpack --mode development",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "fmt": "npm run format && npm run lint:fix",
    "test": "vscode-test",
    "test:nolint": "npm run compile-tests && npm run compile && vscode-test",
    "test:unit": "npm run compile-tests && mocha ./out/test/suite/*.test.js",
    "test:watch": "npm run compile-tests && mocha ./out/test/suite/*.test.js --watch",
    "test:coverage": "nyc npm test",
    "test:unit:coverage": "nyc npm run test:unit",
    "coverage:report": "nyc report --reporter=html && open coverage/index.html",
    "download-rumdl": "node scripts/download-rumdl.js",
    "download-rumdl-target": "node scripts/download-rumdl.js --target",
    "download-rumdl-current": "node scripts/download-rumdl.js --current-platform-only",
    "update-rumdl": "node scripts/download-rumdl.js --latest",
    "clean-rumdl": "rm -rf bundled-tools && mkdir -p bundled-tools",
    "verify-rumdl": "node -e \"const fs = require('fs'); const path = require('path'); const version = JSON.parse(fs.readFileSync('bundled-tools/version.json', 'utf8')); console.log('âœ… rumdl version:', version.version); console.log('ðŸ“ Binaries:', fs.readdirSync('bundled-tools').filter(f => f.startsWith('rumdl-')).length + ' platforms');\"",
    "sync-schema": "node scripts/sync-schema.js",
    "create-icon": "node scripts/create-icon.js",
    "resize-icon": "node scripts/resize-icon.js",
    "vsce:package": "vsce package"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^5.2.3",
    "@types/glob": "^9.0.0",
    "@types/iarna__toml": "^2.0.5",
    "@types/mocha": "^10.0.10",
    "@types/node": "25.x",
    "@types/sinon": "^21.0.0",
    "@types/vscode": "^1.82.0",
    "@types/which": "^3.0.4",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.54.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "c8": "^11.0.0",
    "chai": "^6.2.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "nyc": "^17.1.0",
    "prettier": "^3.8.1",
    "sinon": "^21.0.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1",
    "webpack": "^5.105.3",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "vscode-languageclient": "^9.0.1",
    "which": "^5.0.0"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/test/**",
      "src/**/*.test.ts"
    ],
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "all": true,
    "check-coverage": true,
    "branches": 100,
    "lines": 100,
    "functions": 100,
    "statements": 100
  }
}
