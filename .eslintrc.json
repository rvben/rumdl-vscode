{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "extends": [
    "prettier"
  ],
  "rules": {
    "@typescript-eslint/semi": "warn",
    "curly": "error",
    "eqeqeq": "warn",
    "no-throw-literal": "warn",
    "semi": "off",
    "prettier/prettier": "error"
  },
  "ignorePatterns": [
    "out",
    "dist",
    "**/*.d.ts"
  ]
}